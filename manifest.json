{
    "manifest_version": 3,
    "name": "Wikipedia Summarizer",
    "version": "1.0",
    "description": "A Chrome extension to summarize Wikipedia pages.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "Summarize Wiki Page"
    },
    "icons": {
      "512": "icons/icon.png"
    }
  }
  